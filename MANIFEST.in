# 包含额外的文件到分发包中

# 包含文档文件
include README.md
include requirements.txt
include prompt.md

# 包含许可证文件（如果存在）
include LICENSE*

# 包含文档目录
recursive-include docs *.rst *.py *.bat
recursive-include docs/_static *
recursive-include docs/_templates *
include docs/Makefile
include docs/make.bat

# 排除构建文件
recursive-exclude docs/_build *

# 包含测试文件
recursive-include casetest *.py

# 排除缓存和临时文件
global-exclude *.pyc
global-exclude *.pyo
global-exclude *.pyd
global-exclude __pycache__
global-exclude .git*
global-exclude .DS_Store
global-exclude *.so
global-exclude *.egg-info